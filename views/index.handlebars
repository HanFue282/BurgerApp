<div class="row">
    <div class="col-md-5">
        <h1>BURGERS!</h1>

        <h2>Burgers left to consume!</h2>

        <ul>
            {{#each burger}}
                {{#unless devoured}}
                    {{> burger/burger-box devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-5">
        <h2>Burgers are CONSUMED!</h2>

        <ul>
            {{#each burger}}
                {{#if devoured}}
                    {{> burger/burger-box devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<h2>Create your burger!</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <div class="form-group">
        <label for="devo">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Eat me!
    </div>

    <button type="submit">Add burger!</button>
</form>